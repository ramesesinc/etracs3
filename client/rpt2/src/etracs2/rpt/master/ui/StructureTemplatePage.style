"entity.*" [mode == 'read'] {
    readonly:true;
}

"entity.*" [mode != 'read'] {
    readonly:false;
}

"selectedItem|searchText" [mode == 'read'] {
    enabled:true;
}

"selectedItem|searchText" [mode != 'read'] {
    enabled:false;
}

"entity.objid" [mode == 'create'] {
    readonly:false;
}

"entity.objid" [mode != 'create'] {
    readonly:true;
}

"structures" [mode != 'read' ]{
    enabled:true;
}

"structures" [mode == 'read']{
    enabled:false;
}